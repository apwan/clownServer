//- space.jade
extends ./layout.jade

block title
	title 个人主页
block aCSS
	link(rel='stylesheet', href='/stylesheets/space.css')

block content
	//- 用户信息
	.container
		.col-lg-6
			img(src= avatar, height="100", width="100")
		.col-lg-6
			ul.list-group
				.li.list-group-item= '用户名: ' + name
				.li.list-group-item= 'Email: ' + email

	ul.list-group.slideList
		each slide,index in slideList
			+slideItem(slide, index)
		.li.list-group-item.createNew
			input.newSlideName(type="text", placeholder="new slide name")
			button(index=index, type="button", class="btn btn-primary createBtn pull-right") 新建Slide

block scripts
	script(src='/javascripts/space.js')
	script#user-info(type="text/javascript").
		var SLConfig = {
			username: "#{name}",
			email: "#{email}"
		}





mixin slideItem(slide, index)
		.li.list-group-item(index=index)
			h3= slide.name
			.btn-toolbar.pull-right(index=index,role="toolbar", aria-label= slide._id)
				button(type="button", class="btn btn-default showBtn") 展示
				button(index=index, type="button", class="btn btn-default modifyBtn") 修改
				button(type="button", class="btn btn-default deleteBtn") 删除

